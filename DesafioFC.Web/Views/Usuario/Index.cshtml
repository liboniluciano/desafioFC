@model IEnumerable<DesafioFC.Domain.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Usuários</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            Nome
        </th>
        <th></th>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Editar", "Alterar", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<p class="text-right">
    @Html.ActionLink("Novo", "Novo", "", new { @class = "btn btn-primary" })
</p>