@model IEnumerable<DesafioFC.Domain.Paciente>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Pacientes</h2>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Endereço
        </th>
        <th>
            Número
        </th>
        <th>
            Telefone
        </th>
        <th>
            RG
        </th>
        <th></th>
    </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Convert.ToString($"{item.DataNascimento:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroEndereco)
            </td>
            <td class="telefone">
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.ActionLink("Editar", "Alterar", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<p class="text-right"> 
    @Html.ActionLink("Novo", "Novo", "", new { @class = "btn btn-primary" })
</p>
